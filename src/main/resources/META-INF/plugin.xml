<idea-plugin>
    <id>com.jetbrains.intellij-structural-search-for-kotlin</id>
    <name>Structural Search for Kotlin</name>
    <vendor url="http://www.jetbrains.com">JetBrains</vendor>

    <description><![CDATA[
    Provides structural search and replace (SSR) support for the Kotlin language.
    Any issues can be reported to YouTrack using the "IDE. Structural Search" subsystem of the Kotlin project:
    https://bit.ly/2APryEQ
    ]]></description>


    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <structuralsearch.profile implementation="com.jetbrains.kotlin.structuralsearch.KotlinStructuralSearchProfile"/>

        <structuralsearch.filter implementation="com.jetbrains.kotlin.structuralsearch.filters.VarOnlyFilter"/>
        <structuralsearch.filter implementation="com.jetbrains.kotlin.structuralsearch.filters.ValOnlyFilter"/>
    </extensions>
</idea-plugin>