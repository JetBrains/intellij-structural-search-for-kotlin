<idea-plugin>
    <id>com.jetbrains.intellij-structural-search-for-kotlin</id>
    <name>Structural Search for Kotlin</name>
    <vendor url="http://www.jetbrains.com">JetBrains</vendor>

    <description><![CDATA[
    This plugin provides structural search and replace (SSR) support for the Kotlin language.
    ]]></description>


    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <structuralsearch.profile implementation="com.jetbrains.kotlin.structuralsearch.KotlinStructuralSearchProfile"/>
    </extensions>
</idea-plugin>